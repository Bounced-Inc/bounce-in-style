{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./**/*.test.*"]
}
